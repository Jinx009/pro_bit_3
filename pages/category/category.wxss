/**index.wxss**/

page {
  background: rgb(248, 248, 248);
  overflow: scroll;
}

/*主容器*/

.stepper {
  width: 260rpx;
  height: 26px;
  margin: 0 auto;
  margin-left: 130rpx;
  margin-top: 20rpx;
}

/*加号和减号*/

.stepper text {
  float: left;
  border: 1px solid #ccc;
  width: 26px;
  line-height: 26px;
  text-align: center;
  border-radius: 26rpx;
  color: orange;
}

/*数值*/

.stepper input {
  width: 40px;
  height: 26px;
  float: left;
  margin: 0 auto;
  text-align: center;
  font-size: 14px;
}

/*普通样式*/

.stepper .normal {
  color: black;
}

/*禁用样式*/

.stepper .disable {
  color: #ccc;
}

.navigation {
  width: 100%;
  text-align: center;
  color: #515151;
  font-size: 16px;
  border-bottom: 2rpx solid #f8f8f8;
  height: 80rpx;
  padding-top: 60rpx;
  background: rgb(248, 248, 248);
}

.bargain-wrapper, .special-topic-wrapper {
  width: 716rpx;
  background: #fff;
  margin-top: 0rpx;
  margin-left: 17rpx;
  border-bottom: 2rpx solid #f8f8f8;
}

.bargain-header, .topic-header {
  height: 80rpx;
  display: flex;
  margin-top: 120rpx;
  justify-content: center;
  align-items: center;
  border-bottom: 2rpx solid #f8f8f8;
  font-size: 14px;
}

.topic-header {
  border-bottom: none;
}

.icon-right {
  width: 40rpx;
  height: 40rpx;
  margin-left: 10rpx;
}

.bargain-item {
  height: 168rpx;
  display: flex;
  width: 680rpx;
  margin-left: 18rpx;
}

.bargain-img {
  width: 130rpx;
  height: 130rpx;
  margin-right: 31rpx;
  margin-top: 40rpx;
}

.bargain-info-right {
  width: 318rpx;
  height: 168rpx;
  display: flex;
  text-align: right;
  padding-right: 42rpx;
  flex-direction: column;
  justify-content: space-between;
  font-size: 14px;
  color: #ed4040;
}

.bargain-info {
  width: 557rpx;
  height: 168rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  font-size: 14px;
}

.info-header {
  display: flex;
  flex-direction: column;
  height: 168rpx;
}

.title {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 14px;
  height: 45rpx;
  line-height: 45rpx;
  margin-top: 60rpx;
}

.desc {
  font-size: 14px;
  color: #707070;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  height: 45rpx;
  line-height: 45rpx;
}

.info-price {
  display: flex;
  justify-content: space-between;
  padding-right: 100rpx;
}

.base-price, .original-price, .limit {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.base-price .money {
  font-size: 13px;
  color: #ed4040;
}

.original-price, .limit {
  color: #999;
}

.scroll-wrapper {
  width: 100%;
  white-space: nowrap;
  overflow: hidden;
  background: #fff;
}

/*到底提示*/

.bottom-tip {
  height: 120rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #707070;
  font-size: 12px;
}

.guess-you-like-wrapper {
  font-size: 13px;
  color: rbg(178, 178, 178);
  background: #fff;
  height: 100%;
}

.guess-you-like-header {
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.icon-right {
  width: 40rpx;
  height: 40rpx;
  margin-left: 10rpx;
}

.guess-you-like-list {
  display: flex;
  flex-wrap: wrap;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
  height: 94rpx;
  line-height: 94rpx;
  font-size: 14px;
  color: #707070;
  width: 680rpx;
  margin-left: 18rpx;
}

.guess-goods-item {
  display: flex;
  width: 50%;
  flex-direction: column;
  color: #707070;
}

.weui-select {
  width: 173rpx;
  height: 57rpx;
  display: flex;
  border-radius: 16rpx;
  margin-left: 210rpx;
  text-align: center;
}

.bottom-tip {
  height: 120rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #707070;
  font-size: 12px;
}

.btn-buy, .btn-add {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 88rpx;
  width: 563rpx;
  margin-left: 76rpx;
}

.btn-add {
  background: linear-gradient(30deg,#FE9D76,#FF7878 );
  color: #fff;
  border-radius: 49rpx;
  font-size: 30rpx;
  letter-spacing: 4rpx;
}
