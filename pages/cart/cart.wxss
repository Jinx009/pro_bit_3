/**index.wxss**/

page {
  height: 100%;
  background: rgb(248, 248, 248);
}

.navigation {
  width: 100%;
  text-align: center;
  color: #515151;
  font-size: 16px;
  border-bottom: 2rpx solid #f8f8f8;
  height: 80rpx;
  padding-top: 60rpx;
  background: rgb(248, 248, 248);
}

.bargain-wrapper, .special-topic-wrapper {
  width: 716rpx;
  background: #fff;
  margin-top: 0rpx;
  margin-left: 17rpx;
  border-radius: 19rpx;
  margin-bottom: 15rpx;
}

.bargain-header, .topic-header {
  height: 80rpx;
  display: flex;
  margin-top: 120rpx;
  justify-content: center;
  align-items: center;
  border-bottom: 2rpx solid #f8f8f8;
  font-size: 14px;
}

.topic-header {
  border-bottom: none;
}

.icon-right {
  width: 40rpx;
  height: 40rpx;
  margin-left: 10rpx;
}

.bargain-item {
  height: 168rpx;
  display: flex;
  width: 680rpx;
  margin-left: 18rpx;
  border-bottom: 2rpx solid #f8f8f8;
}

.bargain-img {
  width: 95rpx;
  height: 98rpx;
  margin-right: 31rpx;
  margin-top: 40rpx;
}

.bargain-info-right {
  width: 318rpx;
  height: 168rpx;
  display: flex;
  text-align: right;
  padding-right: 42rpx;
  flex-direction: column;
  justify-content: space-between;
  font-size: 14px;
  color: #ed4040;
}

.bargain-info {
  width: 300rpx;
  height: 168rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  font-size: 14px;
}

.info-header {
  display: flex;
  flex-direction: column;
  height: 168rpx;
}

.title {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 14px;
  height: 45rpx;
  line-height: 45rpx;
  margin-top: 40rpx;
}

.desc {
  font-size: 14px;
  color: #707070;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  height: 45rpx;
  line-height: 45rpx;
}

.info-price {
  display: flex;
  justify-content: space-between;
  padding-right: 100rpx;
}

.base-price, .original-price, .limit {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.base-price .money {
  font-size: 13px;
  color: #ed4040;
}

.original-price, .limit {
  color: #999;
}

.scroll-wrapper {
  width: 100%;
  white-space: nowrap;
  overflow: hidden;
  background: #fff;
}

/*到底提示*/

.bottom-tip {
  height: 120rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #707070;
  font-size: 12px;
}

.guess-you-like-wrapper {
  font-size: 13px;
  color: rbg(178, 178, 178);
  background: #fff;
  height: 100%;
}

.guess-you-like-header {
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.icon-right {
  width: 40rpx;
  height: 40rpx;
  margin-left: 10rpx;
}

.guess-you-like-list {
  display: flex;
  flex-wrap: wrap;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
  height: 94rpx;
  line-height: 94rpx;
  font-size: 14px;
  color: #707070;
  width: 680rpx;
  margin-left: 18rpx;
  border-bottom: 2rpx solid #f8f8f8;
}

.guess-goods-item {
  display: flex;
  width: 50%;
  flex-direction: column;
  color: #707070;
}

.weui-check__label:active {
  background-color: #ececec;
}

.weui-check {
  position: absolute;
  left: -9999px;
}

.weui-check__hd_in-checkbox {
  padding-right: 0.35em;
}

.weui-cell__ft_in-radio {
  padding-left: 0.35em;
}

.weui-icon-radio {
  margin-left: 3.2px;
  margin-right: 3.2px;
}
.radio{
  margin-right: 10rpx;
}
.weui-cell__ft {
  text-align: right;
  color: #999;
}

.weui-cell_access {
  color: inherit;
}

.weui-cell__bd_in-select-before, .weui-cell__hd_in-select-after {
  padding-left: 15px;
}

.weui-cell__ft_in-access {
  padding-right: 13px;
  position: relative;
}

.weui-cell__ft_in-access:after {
  content: " ";
  display: inline-block;
  height: 6px;
  width: 6px;
  border-width: 2px 2px 0 0;
  border-color: #c8c8cd;
  border-style: solid;
  -webkit-transform: matrix(0.71, 0.71, -.71, 0.71, 0, 0);
  transform: matrix(0.71, 0.71, -.71, 0.71, 0, 0);
  position: relative;
  top: -2px;
  position: absolute;
  top: 50%;
  margin-top: -4px;
  right: 2px;
}

.weui-cell_link {
  color: #586c94;
  font-size: 14px;
}

.weui-cell_link:active {
  background-color: #ececec;
}

.weui-cell_link:first-child:before {
  display: block;
}

.weui-icon-radio {
  margin-left: 3.2px;
  margin-right: 3.2px;
}

.weui-icon-checkbox_circle, .weui-icon-checkbox_success {
  margin-left: 4.6px;
  margin-right: 4.6px;
}

.weui-check__label:active {
  background-color: #ececec;
}

